# Example backend configuration for Terraform state management
# Copy this to backend.tf and configure with your values

terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "s3-storage-app/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
    
    # Optional: Use AWS profile
    # profile = "your-aws-profile"
  }
}

# Note: Before using this backend, ensure:
# 1. The S3 bucket exists and has versioning enabled
# 2. The DynamoDB table exists with a primary key named "LockID"
# 3. You have appropriate IAM permissions to access both resources

# To create the backend resources:
# aws s3 mb s3://your-terraform-state-bucket
# aws s3api put-bucket-versioning --bucket your-terraform-state-bucket --versioning-configuration Status=Enabled
# aws dynamodb create-table --table-name terraform-state-lock --attribute-definitions AttributeName=LockID,AttributeType=S --key-schema AttributeName=LockID,KeyType=HASH --billing-mode PAY_PER_REQUEST
